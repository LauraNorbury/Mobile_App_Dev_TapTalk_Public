<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/detail_pub_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detail_pub_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:paddingTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_pub_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/detail_pub_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/detail_pub_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/button_add_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Review"
        android:backgroundTint="@color/colorSecondaryDark"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/toggle_sort_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Sort Order"
        android:backgroundTint="@color/colorSecondaryDark"
        android:layout_marginTop="16dp" />

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviews_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
